@model MvcApplication.Models.Task

@{
    ViewBag.Title = "Edit";
}

<h2>Task [@Html.DisplayFor(model=>model.TaskName)] Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Task</legend>

        @Html.HiddenFor(model => model.TaskID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskName)
            @Html.ValidationMessageFor(model => model.TaskName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskExecuteFilePath)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskExecuteFilePath)
            @Html.ValidationMessageFor(model => model.TaskExecuteFilePath)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TaskArgs)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TaskArgs)
            @Html.ValidationMessageFor(model => model.TaskArgs)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
